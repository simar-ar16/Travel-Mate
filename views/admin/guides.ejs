<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin | Guide Verification</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border-radius: 15px;
      overflow: hidden;
      border: none;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    .section-header {
      position: relative;
      padding-bottom: 10px;
      margin-bottom: 25px;
    }
    .section-header:after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 80px;
      height: 4px;
      background: linear-gradient(90deg, #0d6efd, #198754);
      border-radius: 2px;
    }
    .badge-expertise {
      background: linear-gradient(135deg, #6c757d, #495057);
      color: white;
    }
    .badge-language {
      background: linear-gradient(135deg, #0dcaf0, #0d6efd);
      color: white;
    }
    .profile-img {
      border-bottom: 1px solid rgba(0,0,0,0.1);
    }
    .action-btns .btn {
      border-radius: 8px;
      font-weight: 500;
    }
    .empty-state {
      background-color: #f8f9fa;
      border-radius: 15px;
      padding: 40px;
      text-align: center;
    }
    .empty-state i {
      font-size: 3rem;
      color: #adb5bd;
      margin-bottom: 15px;
    }
  </style>
</head>
<body class="bg-light">
<%- include('../partials/navbar') %>
  <div class="container py-5">

    <div class="text-center mb-5">
      <h1 class="display-5 fw-bold text-primary mb-3">Guide Verification Panel</h1>
      <p class="lead text-muted">Review and manage guide verification requests</p>
    </div>

    <!-- Pending Requests Section -->
    <section class="mb-5">
      <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="section-header text-warning m-0">
          <i class="bi bi-hourglass-split me-2"></i>Pending Requests
          <span class="badge bg-warning ms-2"><%= pendingGuides.length %></span>
        </h2>
      </div>

      <% if (pendingGuides.length === 0) { %>
        <div class="empty-state">
          <i class="bi bi-check2-circle"></i>
          <h4 class="text-muted">No pending requests</h4>
          <p class="text-muted">All guide verification requests have been processed</p>
        </div>
      <% } else { %>
        <div class="row g-4">
          <% pendingGuides.forEach(guide => { %>
            <div class="col-md-4">
              <div class="card shadow-sm h-100">
                <img src="<%= guide.profileImage.url %>" class="card-img-top profile-img" style="height: 250px; object-fit: cover;" alt="<%= guide.user.name %>">
                <div class="card-body">
                  <h5 class="card-title fw-bold mb-3"><%= guide.user.name %></h5>
                  
                  <div class="d-flex align-items-center mb-2">
                    <i class="bi bi-envelope-fill text-muted me-2"></i>
                    <span><%= guide.user.email %></span>
                  </div>
                  
                  <p class="mb-3"><%= guide.bio %></p>
                  
                  <div class="mb-3">
                    <span class="badge badge-expertise rounded-pill me-1 mb-1">
                      <i class="bi bi-clock me-1"></i><%= guide.expertise %> Year(s)
                    </span>
                    <% guide.languages.forEach(language => { %>
                      <span class="badge badge-language rounded-pill me-1 mb-1">
                        <i class="bi bi-translate me-1"></i><%= language %>
                      </span>
                    <% }) %>
                  </div>
                  
                  <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                      <span class="fw-bold">₹<%= guide.pricePerHour %></span>
                      <span class="text-muted">/hour</span>
                    </div>
                    <div><a href="/guide/<%= guide._id %>" target="_blank" class="btn btn-warning btn-sm w-100 mt-auto">
            <i class="bi bi-person-lines-fill me-1"></i>View Full Profile
          </a></div>
                    <a href="<%= guide.idProof.url %>" target="_blank" class="btn btn-sm btn-outline-secondary">
                      <i class="bi bi-file-earmark-text me-1"></i>View ID
                    </a>
                  </div>

                  <div class="action-btns d-flex justify-content-between mt-3">
                    <form action="/admin/guides/<%= guide._id %>/approve" method="POST" class="w-100 me-2">
                      <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-check-circle me-1"></i>Approve
                      </button>
                    </form>
                    <form action="/admin/guides/<%= guide._id %>/reject" method="POST" class="w-100 ms-2">
                      <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-x-circle me-1"></i>Reject
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>

    <!-- Verified Guides Section -->
    <section>
      <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="section-header text-success m-0">
          <i class="bi bi-check-circle-fill me-2"></i>Verified Guides
          <span class="badge bg-success ms-2"><%= verifiedGuides.length %></span>
        </h2>
      </div>

      <% if (verifiedGuides.length === 0) { %>
        <div class="empty-state">
          <i class="bi bi-people"></i>
          <h4 class="text-muted">No verified guides yet</h4>
          <p class="text-muted">Approved guides will appear here</p>
        </div>
      <% } else { %>
        <div class="row g-4">
  <% verifiedGuides.forEach(guide => { %>
    <div class="col-md-3">
      <div class="card shadow-sm h-100">
        <img src="<%= guide.profileImage.url %>" class="card-img-top profile-img" style="height: 200px; object-fit: cover;" alt="<%= guide.user.name %>">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title fw-bold mb-2"><%= guide.user.name %></h5>
          
          <div class="d-flex align-items-center mb-2">
            <i class="bi bi-envelope-fill text-muted me-2"></i>
            <span class="small"><%= guide.user.email %></span>
          </div>
          
          <div class="mb-3">
            <span class="badge badge-expertise rounded-pill bg-info text-dark">
              <i class="bi bi-clock me-1"></i><%= guide.expertise %> Year(s)
            </span>
          </div>
          
          <a href="<%= guide.idProof.url %>" target="_blank" class="btn btn-outline-primary btn-sm w-100 mb-2">
            <i class="bi bi-file-earmark-text me-1"></i>View ID Proof
          </a>

          <!-- ✅ New: View Profile Button -->
          <a href="/guide/<%= guide._id %>" target="_blank" class="btn btn-warning btn-sm w-100 mt-auto">
            <i class="bi bi-person-lines-fill me-1"></i>View Full Profile
          </a>
        </div>
      </div>
    </div>
  <% }) %>
</div>

      <% } %>
    </section>

  </div>
<%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>