<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= guide.user.name %> - TravelMate Guide</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    :root {
      --primary: #ffc107;
      --dark: #212529;
      --light: #f8f9fa;
      --card-bg: #f5f5f5; /* Slightly darker card background */
    }

    body {
      background-color: #ffffff;
      color: #212529;
      font-family: 'Segoe UI', Roboto, sans-serif;
    }

    .glass-card {
      background: var(--card-bg);
      border-radius: 1rem;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(0, 0, 0, 0.3);
      transition: transform 0.3s ease;
    }

    .glass-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    .profile-img {
      width: 100%;
      height: 100%;
      min-height: 350px;
      object-fit: cover;
      border-radius: 0.8rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(0, 0, 0, 0.08);
    }

    .btn-primary {
      background-color: var(--primary);
      color: var(--dark);
      border: none;
      font-weight: 600;
    }

    .btn-primary:hover {
      background-color: #e0a800;
      color: var(--dark);
    }

    .btn-outline-dark {
      border-color: rgba(0, 0, 0, 0.3);
      color: var(--dark);
    }

    .btn-outline-dark:hover {
      background-color: var(--dark);
      color: white;
    }

    .section-title {
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      position: relative;
      padding-bottom: 0.5rem;
      color: var(--dark);
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 60px;
      height: 3px;
      background: var(--primary);
    }

    .map-container {
      height: 400px;
      width: 100%;
      border-radius: 1rem;
      overflow: hidden;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(0, 0, 0, 0.08);
    }

    .guide-card {
      background: var(--card-bg);
      border-radius: 1rem;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: all 0.3s ease;
      height: 100%;
      border: 1px solid rgba(0, 0, 0, 0.08);
    }

    .guide-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    .guide-img {
      height: 200px;
      width: 100%;
      object-fit: cover;
      border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    }

    .info-badge {
      background: var(--primary);
      color: var(--dark);
      padding: 0.35rem 0.8rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 600;
    }

    .empty-state {
      padding: 3rem;
      text-align: center;
      background: var(--card-bg);
      border-radius: 1rem;
      border: 1px dashed rgba(0, 0, 0, 0.1);
    }

    .empty-state i {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: rgba(0,0,0,0.2);
    }

    .language-badge {
      background: rgba(255, 193, 7, 0.2);
      color: var(--dark);
      padding: 0.35rem 0.8rem;
      border-radius: 50px;
      margin-right: 0.5rem;
      margin-bottom: 0.5rem;
      display: inline-block;
      font-size: 0.85rem;
      border: 1px solid rgba(255, 193, 7, 0.3);
    }

    .price-highlight {
      color: var(--primary);
      font-weight: 700;
      font-size: 1.25rem;
    }

    h1, h2, h3, h4, h5, h6 {
      color: var(--dark);
    }

    .text-muted {
      color: #6c757d !important;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>
  <div class="container py-5">
    <div class="row mb-5 g-4">
      <div class="col-lg-4">
        <div class="glass-card h-100 p-3">
          <img src="<%= guide.profileImage.url %>" class="profile-img" alt="<%= guide.user.name %>">
        </div>
      </div>
      <div class="col-lg-8">
        <div class="glass-card h-100 p-4">
          <div class="d-flex justify-content-between align-items-start mb-4">
            <div>
              <h1 class="mb-2"><%= guide.user.name %></h1>
              <p class="mb-0 text-muted">Professional Travel Guide</p>
            </div>
            <span class="info-badge"><i class="fas fa-map-marker-alt me-1"></i> <%= guide.location %></span>
          </div>
          <div class="mb-4">
            <h5 class="mb-3" style="color: var(--dark);">About</h5>
            <p class="text-muted"><%= guide.bio %></p>
          </div>
          <div class="row mb-4">
            <div class="col-md-6 mb-3 mb-md-0">
              <h5 class="mb-3" style="color: var(--dark);">Details</h5>
              <p class="text-muted"><i class="fas fa-star me-2" style="color: var(--primary);"></i> <%= guide.expertise %> Years Experience</p>
              <p class="text-muted"><i class="fas fa-language me-2" style="color: var(--primary);"></i> 
                <% guide.languages.forEach(function(language) { %>
                  <span class="language-badge"><%= language %></span>
                <% }); %>
              </p>
            </div>
            <div class="col-md-6">
              <h5 class="mb-3" style="color: var(--dark);">Pricing</h5>
              <p class="price-highlight">₹<%= guide.pricePerHour %> <small class="text-muted">/ hour</small></p>
            </div>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <a href="/guide" class="btn btn-outline-dark">
              <i class="fas fa-arrow-left me-2"></i> Back to Guides
            </a>
            <p class="mb-0 text-muted" style="font-size: small;">*Add location to Trip Planner to book this guide</p>
          </div>
        </div>
      </div>
    </div>


<!-- Reviews -->
<div class="row mb-5">
  <div class="col-12">
    <div class="glass-card p-4">
      <h3 class="section-title">Reviews</h3>
<div class="d-flex align-items-center mb-3">
  <strong>Rating:</strong>
  <% if (totalReviewsCount > 0) { %>
    <span class="ms-2">⭐ <%= avgRating %> (<%= totalReviewsCount %> reviews)</span>
  <% } else { %>
    <span class="ms-2 text-muted">No reviews yet</span>
  <% } %>
</div>

      <% if (reviews.length === 0) { %>
        <div class="empty-state text-center">
          <i class="far fa-comment-dots fa-2x mb-3"></i>
          <h4>No Reviews Yet</h4>
          <p class="text-muted">
            Be the first to share your experience with <%= guide.user.name.split(' ')[0] %>
          </p>
          <button class="btn btn-outline-dark" disabled>
            <i class="far fa-edit me-2"></i> Write a Review
          </button>
        </div>
      <% } else { %>
        <% reviews.forEach(review => { %>
          <div class="review-item mb-4">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="mb-1"><%= review.travelerId.name %></h5>
              <small class="text-muted"><%= review.createdAt.toDateString() %></small>
            </div>
            <div class="rating mb-2">
              <% for (let i = 1; i <= 5; i++) { %>
                <i class="fa<%= i <= review.rating ? 's' : 'r' %> fa-star text-warning"></i>
              <% } %>
            </div>
            <p class="mb-0"><%= review.comment %></p>
          </div>
          <hr>
        <% }) %>
      <% } %>

      <% if (totalReviewsCount > reviews.length) { %>
  <a href="/guide/<%= guide._id %>/reviews" class="btn btn-outline-warning">
    Read all reviews
  </a>
  <% } %>
    </div>
  </div>
</div>


    <!-- Other Guides -->
    <div class="row mb-5">
      <div class="col-12">
        <h3 class="section-title">Other Guides in <%= guide.location %></h3>
        <% if (otherGuides.length > 0) { %>
          <div class="row g-4">
            <% otherGuides.forEach(g => { %>
              <div class="col-md-6 col-lg-3">
                <div class="guide-card">
                  <img src="<%= g.profileImage.url %>" class="guide-img" alt="<%= g.user.name %>">
                  <div class="p-3">
                    <h5 class="mb-2"><%= g.user.name %></h5>
                    <p class="small text-muted mb-2"><i class="fas fa-star" style="color: var(--primary);"></i> <%= g.expertise %> yrs experience</p>
                    <p class="price-highlight mb-3">₹<%= g.pricePerHour %>/hr</p>
                    <a href="/guide/<%= g._id %>" class="btn btn-primary w-100">View Profile</a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-map-marked-alt"></i>
            <h4>No Other Guides Available</h4>
            <p class="text-muted">We couldn't find other guides in <%= guide.location %></p>
            <a href="/guide" class="btn btn-outline-dark">
              <i class="fas fa-search me-2"></i> Browse All Guides
            </a>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Map Section -->
    <div class="row">
      <div class="col-12">
        <h3 class="section-title">Explore <%= guide.location %></h3>
        <div class="map-container">
          <iframe 
            width="100%" 
            height="100%" 
            style="border:0" 
            loading="lazy"
            allowfullscreen
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps?q=<%= encodeURIComponent(guide.location) %>&output=embed&zoom=13">
          </iframe>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>