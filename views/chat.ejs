<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat about <%= booking.trip.destination.name %> | TravelBuddy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-black: #2d3436;
            --primary-yellow: #fdcb6e;
            --light-yellow: #ffeaa7;
            --white: #ffffff;
            --light-gray: #f5f6fa;
        }
        
        body {
            background-color: var(--light-gray);
        }
        
        .chat-container {
            max-width: 800px;
            margin: 7% auto;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
            overflow: hidden;
            border: 1px solid #e0e0e0;
        }
        
        .chat-header {
            background-color: var(--primary-black);
            color: var(--white);
            padding: 15px;
            border-bottom: 3px solid var(--primary-yellow);
        }
        
        .messages-container {
            height: 500px;
            overflow-y: auto;
            padding: 20px;
            background-color: var(--white);
        }
        
        .message {
            margin-bottom: 15px;
            display: flex;
            align-items: flex-start;
        }
        
        .message-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 10px;
            border: 2px solid var(--primary-yellow);
        }
        
        .message-content {
            flex: 1;
            background: var(--light-gray);
            padding: 10px 15px;
            border-radius: 10px;
            border: 1px solid #e0e0e0;
        }
        
        .message-sender {
            font-weight: 600;
            color: var(--primary-black);
            margin-right: 8px;
        }
        
        .message-time {
            font-size: 0.8rem;
            color: #7f8c8d;
        }
        
        .message-text {
            margin-top: 5px;
            color: var(--primary-black);
        }
        
        .chat-input {
            border-top: 1px solid #e0e0e0;
            padding: 15px;
            background-color: var(--white);
        }
        
        .send-btn {
            background-color: var(--primary-black);
            color: var(--primary-yellow);
            border: none;
            padding: 8px 20px;
            margin-top: 10px;
            font-weight: 600;
            transition: all 0.3s;
        }
        
        .send-btn:hover {
            background-color: var(--primary-black);
            color: var(--white);
            transform: translateY(-1px);
        }
        
        textarea.form-control {
            border: 1px solid #e0e0e0;
            resize: none;
        }
        
        textarea.form-control:focus {
            border-color: var(--primary-yellow);
            box-shadow: 0 0 0 0.25rem rgba(253, 203, 110, 0.25);
        }
        
        .empty-state {
            color: #7f8c8d;
        }
        
        .empty-state i {
            color: var(--primary-yellow);
        }

        @media (max-width: 768px) {
  .chat-container {
    max-width: 800px;
    margin: 20% auto;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0,0,0,0.05);
    overflow: hidden;
    border: 1px solid #e0e0e0;
  }
}

    </style>
</head>
<body>
    <% if (user.role === 'guide') { %>
        <%- include('partials/guide-navbar') %>
    <% } else { %>
        <%- include('partials/navbar') %>
    <% } %>

    <div class="container my-4">
        <div class="chat-container">
            <div class="chat-header">
                <h4 class="mb-0">
                    <i class="fas fa-comments me-2" style="color: var(--primary-yellow);"></i>
                    Chat about your trip to <%= booking.trip.destination.name %>
                </h4>
            </div>
            
            <div class="messages-container" id="messagesContainer">
                <% if (messages.length === 0) { %>
                    <div class="text-center empty-state py-4">
                        <i class="far fa-comment-dots fa-2x mb-2"></i>
                        <p>No messages yet. Start the conversation!</p>
                    </div>
                <% } else { %>
                    <% messages.forEach(msg => { %>
                        <div class="message">
                            <img src="<%= msg.sender.profileImage || '/images/default-avatar.png' %>" 
                                 alt="<%= msg.sender.name %>" 
                                 class="message-avatar">
                            <div class="message-content">
                                <div>
                                    <span class="message-sender"><%= msg.sender.name %></span>
                                    <span class="message-time">
                                        <i class="far fa-clock"></i> 
                                        <%= msg.createdAt.toLocaleString('en-US', { 
                                            month: 'short', 
                                            day: 'numeric', 
                                            hour: '2-digit', 
                                            minute: '2-digit' 
                                        }) %>
                                    </span>
                                </div>
                                <div class="message-text"><%= msg.message %></div>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>
            
            <div class="chat-input">
                <form method="POST" action="/chat/<%= booking._id %>" id="chatForm">
                    <div class="form-group mb-2">
                        <textarea name="message" class="form-control" rows="3" 
                                  placeholder="Type your message here..." required></textarea>
                    </div>
                    <button type="submit" class="btn send-btn">
                        <i class="fas fa-paper-plane me-1"></i> Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>

    <% if (user.role === 'guide') { %>
        <%- include('partials/guide-footer') %>
    <% } else { %>
        <%- include('partials/footer') %>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-scroll to bottom of messages
        document.addEventListener('DOMContentLoaded', function() {
            const messagesContainer = document.getElementById('messagesContainer');
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
            
            // Focus the textarea when page loads
            document.querySelector('textarea[name="message"]').focus();
            
            // Add animation to new messages
            const messages = document.querySelectorAll('.message');
            messages.forEach(msg => {
                msg.style.opacity = '0';
                msg.style.transform = 'translateY(10px)';
                msg.style.transition = 'all 0.3s ease';
            });
            
            setTimeout(() => {
                messages.forEach(msg => {
                    msg.style.opacity = '1';
                    msg.style.transform = 'translateY(0)';
                });
            }, 100);
        });
    </script>
</body>
</html>