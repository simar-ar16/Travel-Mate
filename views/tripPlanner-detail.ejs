<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trip Details - <%= trip.destination.name %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    :root {
      --primary-yellow: #dec84b;
      --dark-yellow: #FFC000;
      --black: #1A1A1A;
      --white: #FFFFFF;
      --light-gray: #F8F9FA;
      --dark-gray: #2D2D2D;
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
      --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.12);
      --transition: all 0.3s ease;
    }
    
    body {
        padding-top: 70px;
      font-family: 'Poppins', sans-serif;
      background-color: var(--light-gray);
      color: var(--black);
      line-height: 1.6;
    }
    
    .countdown-banner {
      background: linear-gradient(135deg, var(--black) 0%, var(--dark-gray) 100%);
      color: var(--primary-yellow);
      border: none;
      border-radius: 10px;
      box-shadow: var(--shadow-sm);
      margin-bottom: 2rem;
      padding: 1rem;
      text-align: center;
      transition: var(--transition);
    }
    
    .countdown-banner:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
    }
    
    .trip-card {
      background-color: var(--white);
      border-radius: 12px;
      border: none;
      box-shadow: var(--shadow-sm);
      margin-bottom: 2rem;
      overflow: hidden;
      transition: var(--transition);
    }

    
    .card-header {
      background-color: var(--black);
      color: var(--primary-yellow);
      padding: 1rem 1.5rem;
      border-bottom: 2px solid var(--primary-yellow);
    }
    
    .card-title {
      font-weight: 600;
      margin-bottom: 0;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .card-body {
      padding: 1.5rem;
    }
    
    .btn-primary {
      background-color: var(--primary-yellow);
      color: var(--black);
      border: none;
      font-weight: 500;
      padding: 0.5rem 1.25rem;
      border-radius: 8px;
      transition: var(--transition);
    }
    
    .btn-primary:hover {
      background-color: var(--dark-yellow);
      transform: translateY(-2px);
      box-shadow: var(--shadow-sm);
    }
    
    .btn-success {
      background-color: var(--black);
      color: var(--white);
      border: none;
      font-weight: 500;
      padding: 0.5rem 1.25rem;
      border-radius: 8px;
      transition: var(--transition);
    }
    
    .btn-success:hover {
      background-color: var(--dark-gray);
      transform: translateY(-2px);
      box-shadow: var(--shadow-sm);
    }
    
    .btn-outline-danger {
      border-radius: 50%;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0;
    }
    
    .list-group-item {
      border-radius: 8px !important;
      margin-bottom: 8px;
      background-color: rgba(255, 215, 0, 0.15);
      border: 1px solid rgba(0, 0, 0, 0.05);
      display: flex;
      align-items: center;
      justify-content: space-between;
      transition: var(--transition);
    }
    
    .list-group-item:hover {
      background-color: #b6ad7dd9;
      border-color: rgba(255, 215, 0, 0.2);
    }
    
    .badge {
      font-weight: 500;
      padding: 0.5em 0.75em;
      border-radius: 8px;
    }
    
    .form-control {
      border-radius: 8px;
      border: 1px solid #e0e0e0;
      padding: 0.5rem 1rem;
      transition: var(--transition);
    }
    
    .form-control:focus {
      border-color: var(--primary-yellow);
      box-shadow: 0 0 0 0.25rem rgba(255, 215, 0, 0.25);
    }
    
    textarea.form-control {
      min-height: 120px;
    }
    
    input[type="checkbox"] {
      transform: scale(1.2);
      accent-color: var(--primary-yellow);
      cursor: pointer;
      margin-right: 10px;
    }
    
    .text-muted {
      color: #6c757d !important;
    }
    
    .completed-item {
      text-decoration: line-through;
      color: #6c757d;
    }
    
    .itinerary-day {
      background-color: rgba(255, 215, 0, 0.05);
      border-left: 3px solid var(--primary-yellow);
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
    }
    
    .itinerary-day strong {
      color: var(--black);
    }
    
    .itinerary-day ul {
      padding-left: 1.5rem;
      margin-top: 0.5rem;
    }
    
    .itinerary-day li {
      margin-bottom: 0.25rem;
    }
    
    .status-badge {
      background-color: var(--primary-yellow);
      color: var(--black);
    }
    
    .trip-dates {
      display: flex;
      gap: 1.5rem;
      margin: 1rem 0;
    }
    
    .trip-date {
      background-color: rgba(255, 215, 0, 0.1);
      padding: 0.75rem 1rem;
      border-radius: 8px;
      flex: 1;
    }
    
    .trip-date strong {
      display: block;
      margin-bottom: 0.25rem;
      color: var(--black);
    }
    
    @media (max-width: 768px) {
      .trip-dates {
        flex-direction: column;
        gap: 0.5rem;
      }
      
      .card-body {
        padding: 1rem;
      }
    }
  </style>
</head>

<body>
  <%- include('partials/navbar') %>

  <div class="container py-4">
    <div class="countdown-banner">
      <h5 class="mb-0"><i class="fas fa-hourglass-start me-2"></i> <span id="countdownText"></span></h5>
    </div>

    <!-- Trip Overview -->
    <div class="trip-card">
      <div class="card-header">
        <h3 class="card-title"><i class="fas fa-map-marker-alt"></i> <%= trip.destination.name %> Trip</h3>
      </div>
      <div class="card-body">
        <div class="trip-dates">
          <div class="trip-date">
            <strong>Start Date</strong>
            <%= trip.startDate.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
          </div>
          <div class="trip-date">
            <strong>End Date</strong>
            <%= trip.endDate.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
          </div>
        </div>
        
        <p class="mb-0"><strong>Status:</strong>
          <span class="badge status-badge">
            <%= new Date(trip.endDate) < new Date() ? 'Completed' : 'Upcoming' %>
          </span>
        </p>

      </div>
    </div>

    <!-- Notes -->
    <div class="trip-card">
      <div class="card-header">
        <h5 class="card-title"><i class="fas fa-sticky-note"></i> Trip Notes</h5>
      </div>
      <div class="card-body">
        <form action="/trip-planner/<%= trip._id %>/notes" method="POST">
          <textarea class="form-control mb-3" name="notes" rows="5" placeholder="Add your trip notes here..."><%= trip.notes || '' %></textarea>
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Save Notes</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Itinerary -->
    <div class="trip-card">
      <div class="card-header">
        <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Itinerary</h5>
      </div>
      <div class="card-body">
        <% if (trip.itinerary.length === 0) { %>
          <div class="text-center py-4">
            <i class="fas fa-calendar-plus fa-3x mb-3" style="color: #e0e0e0;"></i>
            <p class="text-muted">No itinerary added yet. Start planning your adventure!</p>
          </div>
        <% } else { %>
          <% trip.itinerary.forEach(day => { %>

            <div class="itinerary-day d-flex justify-content-between align-items-start mb-2">
  <div>
    <strong>Day <%= day.day %>: <%= day.title %></strong>
    <ul class="mb-0">
      <% day.activities.forEach(act => { %>
        <li><%= act %></li>
      <% }) %>
    </ul>
  </div>
  
  <form action="/trip-planner/<%= trip._id %>/itinerary/delete/<%= day.day %>" method="POST" class="ms-3">
    <input type="hidden" name="day" value="<%= day.day %>">
    <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete Day <%= day.day %> from itinerary?')">
      <i class="fas fa-trash-alt"></i>
    </button>
  </form>
</div>
          <% }) %>
        <% } %>

        <hr class="my-4">
        
        <h6 class="mb-3"><i class="fas fa-plus-circle me-2"></i>Add New Itinerary Item</h6>
        <form action="/trip-planner/<%= trip._id %>/itinerary" method="POST" class="row g-3">
          <div class="col-md-2">
            <input name="day" class="form-control" placeholder="Day" required>
          </div>
          <div class="col-md-3">
            <input name="title" class="form-control" placeholder="Title" required>
          </div>
          <div class="col-md-5">
            <input name="activities" class="form-control" placeholder="Activities (comma separated)" required>
          </div>
          <div class="col-md-2 d-grid">
            <button class="btn btn-success"><i class="fas fa-plus me-1"></i> Add</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Budget -->
    <div class="trip-card">
      <div class="card-header">
        <h5 class="card-title"><i class="fas fa-wallet"></i> Budget Planner</h5>
      </div>
      <div class="card-body">
        <form action="/trip-planner/<%= trip._id %>/budget" method="POST" class="row g-3 mb-4">
          <div class="col-md-5">
            <input type="text" name="category" placeholder="Category" class="form-control" required>
          </div>
          <div class="col-md-5">
            <input type="number" name="amount" placeholder="Amount" class="form-control budget-amount" required>
          </div>
          <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary"><i class="fas fa-plus me-1"></i> Add</button>
          </div>
        </form>

        <% if (trip.budget && trip.budget.length > 0) { %>
          <ul class="list-group">
            <% trip.budget.forEach(item => { %>
              <li class="list-group-item">
                <div>
                  <strong><%= item.category %></strong>
                  <div class="text-muted">â‚¹<%= item.amount.toLocaleString() %></div>
                </div>
                <form action="/trip-planner/<%= trip._id %>/budget/<%= item.category %>/delete" method="POST" class="m-0">
                  <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-times"></i></button>
                </form>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <div class="text-center py-4">
            <i class="fas fa-coins fa-3x mb-3" style="color: #e0e0e0;"></i>
            <p class="text-muted">No budget items added yet. Start tracking your expenses!</p>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Packing Checklist -->
    <div class="trip-card">
      <div class="card-header">
        <h5 class="card-title"><i class="fas fa-suitcase-rolling"></i> Packing Checklist</h5>
      </div>
      <div class="card-body">
        <% if (trip.packingList.length === 0) { %>
          <div class="text-center py-4">
            <i class="fas fa-suitcase fa-3x mb-3" style="color: #e0e0e0;"></i>
            <p class="text-muted">No packing items added yet. What do you need to bring?</p>
          </div>
        <% } else { %>
          <ul class="list-group mb-4">
            <% trip.packingList.forEach((item, index) => { %>
              <li class="list-group-item">
                <form action="/trip-planner/<%= trip._id %>/packing/<%= index %>/toggle" method="POST" class="d-flex align-items-center m-0 flex-grow-1">
                  <input type="checkbox" name="checked" onchange="this.form.submit()" <%= item.packed ? 'checked' : '' %> >
                  <span class="<%= item.packed ? 'completed-item' : '' %> ms-2"><%= item.name %></span>
                </form>
                <form action="/trip-planner/<%= trip._id %>/packing/<%= index %>/delete" method="POST" class="m-0">
                  <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i></button>
                </form>
              </li>
            <% }) %>
          </ul>
        <% } %>

        <form action="/trip-planner/<%= trip._id %>/packing" method="POST" class="d-flex gap-2">
          <input name="item" class="form-control flex-grow-1" placeholder="Add new item" required>
          <button class="btn btn-success"><i class="fas fa-plus me-1"></i> Add</button>
        </form>
      </div>
    </div>
  </div>

<div class="text-center my-4">
 <% if (booking) { %>
    <% if (booking.status === 'pending') { %>
      <!-- Booking requested -->
      <a href="/guide/<%= booking.guide._id %>" class="btn btn-outline-warning btn-lg">
        <i class="bi bi-clock-history"></i> Guide Requested
      </a>

    <% } else if (booking.status === 'accepted') { %>
      <!-- Booking accepted - now opens Booking Details -->
       <span class="badge bg-success mb-2">Booking Confirmed</span><br>
      <a href="/trip-planner/<%= trip._id %>/booking/<%= booking._id %>" class="btn btn-success btn-lg">
        <i class="bi bi-check-circle-fill"></i> View Booking
      </a>
    <% } %>

  <% } else if (rejectedBooking) { %>
    <!-- Booking rejected -->
    <div class="d-flex flex-column align-items-center">
      <span class="badge bg-danger mb-2">Booking Rejected</span>
      <a href="/trip-planner/<%= trip._id %>/book-guide" class="btn btn-warning btn-lg">
        <i class="bi bi-search"></i> View Other Guides
      </a>
    </div>

<% } else { %>
  <!-- No booking exists -->
  <a href="/trip-planner/<%= trip._id %>/book-guide" class="btn btn-warning btn-lg">
    <i class="bi bi-person-badge-fill"></i> Book a Guide
  </a>
<% } %>

</div>



<%- include('partials/footer') %>

  <script>


    const startDate = new Date("<%= trip.startDate.toISOString() %>");
    const today = new Date();
    const timeDiff = startDate - today;
    const daysLeft = Math.ceil(timeDiff / (1000 * 60 * 60 * 24));
    const countdownEl = document.getElementById("countdownText");

    if (daysLeft > 0) {
      countdownEl.innerHTML = `<strong>${daysLeft}</strong> day${daysLeft !== 1 ? 's' : ''} left until your trip starts! <i class="fas fa-smile-beam ms-2"></i>`;
    } else if (daysLeft === 0) {
      countdownEl.innerHTML = `Your trip starts today! <i class="fas fa-party-horn ms-2"></i>`;
    } else {
      countdownEl.innerHTML = `Your trip started <strong>${Math.abs(daysLeft)}</strong> day${Math.abs(daysLeft) !== 1 ? 's' : ''} ago. <i class="fas fa-umbrella-beach ms-2"></i>`;
    }
  </script>
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>